<header class="fixed-filter">
    <div class="row mt-05">
        <div class="col-md-8">
            <h3>View Facility - {{this.model.facilityName}}</h3>
        </div>
        <div class="ml-50 col-md-1" style="display: flex;">
            <button type="button" class="btn btn-primary" {{action 'edit' this.model.facilityId}}>Edit</button>
        </div>
    </div>
</header>

  <div class="container mt-30">
    <ul class="nav nav-tabs custom-tabs">
      <li class="nav-item" {{action (mut this.selectedTab) 'devices'}}>
        <a class="nav-link {{if (is-equal this.selectedTab 'devices') 'active'}}" id="tab1-tab" data-bs-toggle="tab" href="#tab1" role="tab" aria-controls="tab1" aria-selected="true">Devices</a>
      </li>
      <li class="nav-item" {{action (mut this.selectedTab) 'products'}}>
        <a class="nav-link {{if (is-equal this.selectedTab 'products') 'active'}}" id="tab2-tab" data-bs-toggle="tab" href="#tab2" role="tab" aria-controls="tab2" aria-selected="false">Products</a>
      </li>
      <li class="nav-item" {{action (mut this.selectedTab) 'users'}}>
        <a class="nav-link {{if (is-equal this.selectedTab 'users') 'active'}}" id="tab3-tab" data-bs-toggle="tab" href="#tab3" role="tab" aria-controls="tab3" aria-selected="false">Users with access</a>
      </li>
    </ul>
    <div class="tab-content">
        {{#if (is-equal this.selectedTab 'devices')}}
            <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
                <h4>Devices in {{this.model.facilityName}}</h4>
                <Facilities::Devices::ListComponent @facilityId={{this.model.facilityId}}/>
            </div>
        {{else if (is-equal this.selectedTab 'products')}}
            <div class="tab-pane fade show active" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">
                <h4>Products in {{this.model.facilityName}}</h4>
                <Facilities::Products::ListComponent @facilityId={{this.model.facilityId}}/>
            </div>
            {{else if (is-equal this.selectedTab 'users')}}
            <div class="tab-pane fade show active" id="tab3" role="tabpanel" aria-labelledby="tab3-tab">
                <h4>Content for Tab 3</h4>
                <p>This is the content for Tab 3.</p>
            </div>
        {{/if}}
    </div>
  </div>