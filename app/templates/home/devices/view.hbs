{{#in-element this.currentUser.wormholeContainerElement}}
    <header class="fixed-filter">
        <div style="display: flex">
            <h3>View Device - {{this.model.deviceNameAndSerialNumber}}</h3>
            <div class="mb-05 mr-10" style="margin-left: auto;">
                <button type="button" class="btn btn-primary" {{action 'edit' this.model.deviceId}}>Edit</button>
                <button type="button" class="ml-10 btn btn-danger" {{action 'deleteDevice'}}>Delete</button>
            </div>
        </div>
    </header>
{{/in-element}}

  <div class="container mt-30">
    <ul class="nav nav-tabs custom-tabs">
      <li class="nav-item" {{action (mut this.selectedTab) 'liveData'}}>
        <a class="nav-link {{if (is-equal this.selectedTab 'liveData') 'active'}}" id="tab1-tab" data-bs-toggle="tab" href="#tab1" role="tab" aria-controls="tab1" aria-selected="true">Live data</a>
      </li>
      <li class="nav-item" {{action (mut this.selectedTab) 'settings'}}>
        <a class="nav-link {{if (is-equal this.selectedTab 'settings') 'active'}}" id="tab2-tab" data-bs-toggle="tab" href="#tab2" role="tab" aria-controls="tab2" aria-selected="false">Settings</a>
      </li>
    </ul>
    <div class="tab-content">
        {{#if (is-equal this.selectedTab 'liveData')}}
            <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
                No live data yet.
            </div>
        {{else if (is-equal this.selectedTab 'settings')}}
            <div class="tab-pane fade show active" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">
                No settings yet.
            </div>
        {{/if}}
    </div>
  </div>