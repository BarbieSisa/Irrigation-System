<header class="fixed-filter">
    <div class="row mt-05">
        <div class="col-md-8">
            <h3>{{if this.model.deviceId 'Edit' 'Create'}} Device</h3>
        </div>
        <div class="ml-50 col-md-1" style="display: flex;">
            <button type="button" class="btn btn-primary" {{action 'save'}}>Save</button>
            <button type="button" class="btn btn-primary ml-05" {{action 'cancel'}}>Cancel</button>
        </div>
    </div>
</header>

<section style="margin-top: 75px;">
    <div class="row">
        <CustomFormComponent 
        @columnSize={{4}} 
        @cssClass="mb-3" 
        @max="45"
        @componentType="text" 
        @value={{this.serialNumber}} 
        @label="Device serial number" />
        
        <CustomFormComponent 
        @columnSize={{4}} 
        @cssClass="mb-3" 
        @max="45"
        @componentType="text" 
        @value={{this.deviceName}} 
        @label="Device name" />
    </div>
    <div class="row">
        <CustomFormComponent 
        @columnSize={{4}} 
        @disabled={{if this.model.deviceId 'true'}}
        @label="Facility" 
        @value={{this.facilityId}} 
        @onChange={{action (mut this.facilityId)}}
        @required={{true}} 
        @componentType="facility" />
    </div>
</section>
