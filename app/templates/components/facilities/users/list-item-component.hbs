<li class='mt-10 mb-10'>
    <div class="row">
        <div class="col-md-10" {{action 'gotoUser' this.party.partyId}}>
            {{this.party.person.fullName}} <span><UserRoleBadgeComponent @user={{this.party.user}}/></span>
        </div>
        {{#unless this.party.user.isSuperUser}}
            <div class="col-md-2">
                <button type="button" class="btn {{if this.hasFacAccess 'btn-warning' 'btn-primary'}}" {{action 'toggleAccess'}}>{{if this.hasFacAccess "Remove access" "Re-grant access"}}</button>
            </div>
        {{else}}
            <div class="col-md-2">
                <button type="button" class="btn btn-secondary" disabled="">Default access</button>
            </div>
        {{/unless}}
    </div>
</li>