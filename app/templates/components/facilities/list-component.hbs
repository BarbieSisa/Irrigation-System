<header class="fixed-filter">
    <div class="row">
        <div class="col-md-8">
            <h3>
                Facilities 
                {{#if this.loadedItems.length}}
                    ({{this.loadedItems.length}}/{{this.meta.itemCount}})
                {{/if}}
            </h3>
        </div>
        <div class="col-md-1">
            <button type="button" class="btn btn-primary mt-05" {{action 'refresh'}}>Refresh</button>
        </div>
        <div class="col-md-1">
            <button type="button" class="btn btn-primary mt-05" {{action 'createFacility'}}>Create</button>
        </div>
    </div>
    <div class="row">
        <CustomFormComponent 
        @columnSize={{3}} 
        @cssClass="mb-3 mt-3" 
        @componentType="text" 
        @value={{this.searchText}} 
        @placeHolder="Search" 
        @onChange={{action 'makeRequestOnFieldChange'}}/>
    </div>
</header>

<section style="margin-top: 95px;">
    <div>
        <ul>
            {{#each this.loadedItems as |facility index|}}
                <Facilities::ListItemComponent 
                @facility={{facility}} 
                @index={{index}} 
                @lastAvailableItemIndex={{this.lastAvailableItemIndex}}
                @onShouldLoadNextPage={{action 'loadNextPage'}}/>
            {{/each}}
        </ul>
        {{#if this.requestLoading}}
            <LoaderComponent/>
        {{/if}}
    </div>
</section>
