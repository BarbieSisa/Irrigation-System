<header class="fixed-filter">
    <div style="display: flex;">
        <h3>{{if this.model.partyId 'Edit' 'Create'}} User</h3>
        <div class="mb-05 mr-10" style="margin-left: auto;">
            <button type="button" class="btn btn-primary" {{action 'save'}}>Save</button>
            <button type="button" class="ml-10 btn btn-primary" {{action 'cancel'}}>Cancel</button>
        </div>
    </div>
</header>
<form class="save-user-form mt-20" data-bs-toggle="validator" role="form">
    <section>
        <div class="row">
            <CustomFormComponent 
            @columnSize={{4}} 
            @cssClass="mb-3" 
            @max="45"
            @label="First name"
            @componentType="text" 
            @required={{true}}
            @value={{this.firstName}}/>

            <CustomFormComponent 
            @columnSize={{4}} 
            @cssClass="mb-3" 
            @max="45"
            @label="Last name"
            @componentType="text" 
            @required={{true}}
            @value={{this.lastName}}/>
        </div>

        <div class="row">
            <CustomFormComponent 
            @columnSize={{4}} 
            @cssClass="mb-3" 
            @max="45"
            @componentType="email" 
            @required={{true}}
            @value={{this.email}} 
            @label="Email" />

            <CustomFormComponent 
            @columnSize={{4}} 
            @cssClass="mb-3" 
            @max="45"
            @label="User role"
            @componentType="select" 
            @value={{readonly this.userRoleId}}
            @required={{true}}
            @disabled={{if this.model.partyId 'true'}}
            @onChange={{action (mut this.userRoleId)}}>
                {{#each this.roleTypes.all as |item|}}
                    <option value={{item.roleTypeId}} selected={{opt-is-equal this.userRoleId item.roleTypeId}}>{{item.beautifiedRoleTypeCode}}</option>
                {{/each}}
            </CustomFormComponent>
        </div>

        <div class="row">
            <CustomFormComponent 
            @columnSize={{4}} 
            @cssClass="mb-3" 
            @max="45"
            @componentType="password"
            @pattern={{regex 'password'}} 
            @id="inputPassword" 
            @name="password"
            @required={{if (or this.pwd this.confirmPassword) true}}
            @value={{this.pwd}} 
            @label="Password" />

            <CustomFormComponent 
            @columnSize={{4}} 
            @cssClass="mb-3" 
            @max="45"
            @componentType="password" 
            @value={{this.confirmPassword}} 
            @required={{if (or this.pwd this.confirmPassword) true}}
            @pattern={{regex 'password'}} 
            @data-match="#inputPassword" 
            @data-match-error="Passwords don't match!"
            @label="Confirm Password" />
        </div>
    </section>
</form>